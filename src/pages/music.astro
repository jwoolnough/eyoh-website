---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
---

<Layout title="Music">
  <Hero
    srcset="/img/arts-centre-1000.webp 1000w, /img/arts-centre-1500.webp 1500w, /img/arts-centre-2000.webp 2000w"
    alt="Eat Your Own Head on stage"
    width="2000"
    height="1396"
    slot="hero"
  />

  <div class="container">
    <div class="box">
      <h1 class="header">Music</h1>

      <iframe
        style="border-radius:12px"
        src="https://open.spotify.com/embed/artist/6xuvJjkb2JNTf4MXK7bSyM?utm_source=generator&theme=0"
        width="100%"
        height="500"
        allowfullscreen=""
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>

      <h2 class="header">Releases</h2>

      <div class="grid">
        <iframe
          style="border-radius:12px"
          src="https://open.spotify.com/embed/album/1YH9Sj8rbn1VwWAHyo9WH4?utm_source=generator&theme=0"
          width="100%"
          height="500"
          allowfullscreen=""
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"></iframe>

        <iframe
          style="border-radius:12px"
          src="https://open.spotify.com/embed/album/3D9U2olAUlkQkppv4KZ5S2?utm_source=generator&theme=0"
          width="100%"
          height="500"
          allowfullscreen=""
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"></iframe>
      </div>
    </div>
  </div>
</Layout>

<style lang="scss">
  // TODO: Abstract
  .container {
    margin: auto;
    padding-bottom: 1.5rem;
  }

  .header {
    margin-bottom: 1.5rem;
    text-align: center;

    * + & {
      margin-top: 2rem;
    }
  }

  .box {
    @include media-query(max-sm) {
      margin-left: -0.75rem;
      margin-right: -0.75rem;
    }

    @include media-query(md) {
      padding: 3rem;
    }
  }

  .grid {
    display: grid;
    gap: 1.5rem;

    @include media-query(sm) {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
